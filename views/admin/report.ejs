<div class="container">
    <h2 class="mb-4">Inventory Reports</h2>
  
    <!-- Toolbar -->
    <div class="d-flex align-items-center gap-3 mb-4">
      <select id="reportType" class="form-select w-auto">
        <option value="stock">Stock Summary</option>
        <option value="low_stock">Low Stock</option>
        <option value="valuation">Inventory Valuation</option>
      </select>
      <button id="generateBtn" class="btn btn-primary">Generate</button>
      <button id="downloadBtn" class="btn btn-outline-success">Download PDF</button>
    </div>
  
    <!-- Report Table Area -->
    <div class="table-wrapper" style="max-height: 500px; overflow-y: auto;">
      <table class="table table-striped table-bordered mb-0">
        <thead class="table-dark" id="reportTableHead">
          <!-- JS will inject headings -->
        </thead>
        <tbody id="reportTableBody">
          <!-- JS will inject report data -->
        </tbody>
      </table>
    </div>
  </div>
  
  <!-- Optional toast or alert area for errors/messages -->
  <div id="reportMessage" class="mt-3"></div>
  