<%- include('partials/header') %>

<style>
  .hero-banner { background-image: url('/images/cosmetics-banner.jpeg'); background-size: cover; background-position: center; min-height: 300px; }
  .hero-overlay { background: rgba(0,0,0,.5); border-radius: .5rem; }
  .h-scroll { scroll-snap-type: x mandatory; }
  .h-scroll .card { scroll-snap-align: start; min-width: 85vw; }
  .h-scroll .card img { height: 150px; object-fit: cover; }
  @media (min-width: 576px) { .h-scroll .card { min-width: 240px; } }
</style>

<div class="container-fluid p-0">
  <div class="container mt-4">
    <div class="row m-0 g-0">
      <div class="col-md-4 d-flex align-items-center justify-content-center bg-white">
        <img src="/images/logo.jpg" alt="SGFB Logo" class="w-100 h-100" style="object-fit: cover;">
      </div>
      <div class="col-md-8 position-relative p-0 hero-banner">
        <div class="position-absolute top-50 start-50 translate-middle text-white text-center p-4 hero-overlay">
          <h1 class="h3 h-md-1">Smells Good, Feel Better correct file</h1>
          <p class="mb-0">Discover premium cosmetics and fragrances just for you</p>
        </div>
      </div>
    </div>

    <div class="text-center mt-4">
      <a href="/customer_products" class="btn btn-dark">Explore Products</a>
    </div>
  </div>

  <div class="container my-4">
    <h4 class="mb-3">Featured Products</h4>
    <div class="d-flex overflow-auto gap-3 px-2 h-scroll" aria-label="Featured products">
      <% products.forEach(product => { %>
        <div class="card flex-shrink-0">
          <img src="/images/<%= product.image_name %>" class="card-img-top" alt="<%= product.product_name %>">
          <div class="card-body text-center">
            <h6 class="card-title mb-1"><%= product.product_name %></h6>
            <p class="card-text text-muted">$<%= parseFloat(product.price).toFixed(2) %></p>
            <button class="btn btn-outline-dark buy-now-btn" data-product-id="<%= product.product_id %>">Inquire</button>
          </div>
        </div>
      <% }) %>
    </div>
  </div>


</div>

<div class="modal fade" id="productModal" tabindex="-1" aria-labelledby="productModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-fullscreen-sm-down modal-lg">
    <div class="modal-content">
      <div class="modal-header bg-dark text-white">
        <h5 class="modal-title" id="productModalLabel">Product Inquiry</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-md-6">
            <img id="modalImage" src="" class="img-fluid" alt="Product Image">
          </div>
          <div class="col-md-6">
            <h5 id="modalName"></h5>
            <p id="modalPrice" class="fw-bold text-danger"></p>
            <form id="inquiryForm">
              <div class="mb-2">
                <input type="email" class="form-control" id="customerEmail" placeholder="Your Email" required>
              </div>
              <div class="mb-2">
                <textarea class="form-control" id="message" rows="3" placeholder="Your Message..." required></textarea>
              </div>
              <input type="hidden" id="productNameHidden">
              <button type="submit" class="btn btn-dark w-100">Send Inquiry</button>
              <div id="inquirySuccess" class="text-success mt-2 d-none">Inquiry sent!</div>
              <div id="inquiryError" class="text-danger mt-2 d-none">Something went wrong. Try again.</div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <!-- <script src="/js/customer.js"></script> -->
  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  <script src="/js/customer_products.js"></script>



</body>
</html>


