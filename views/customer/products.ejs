<%- include('partials/header') %>

<div class="container mt-4">
  <h2 class="text-center mb-4">All Products</h2>

  <!-- Search and filter -->
  <div class="row mb-3">
    <div class="col-md-6">
      <input type="text" class="form-control" id="searchInput" placeholder="Search products...">
    </div>
    <div class="col-md-6 text-end">
      <select id="filterSelect" class="form-select w-auto d-inline">
        <option value="">All Categories</option>
        <option value="Body Spray">Body Spray</option>
        <option value="Cologne">Cologne</option>
      </select>
    </div>
  </div>

  <!-- Product grid -->
  <div class="row g-4" id="productGrid">
    <% products.forEach(product => { %>
      <div class="col-sm-6 col-md-4 col-lg-3 product-card" data-name="<%= product.product_name.toLowerCase() %>">
        <div class="card h-100 shadow-sm">
          <img src="/images/<%= product.image_name %>" class="card-img-top" alt="<%= product.product_name %>">
          <div class="card-body text-center">
            <h6 class="card-title"><%= product.product_name %></h6>
            <p class="card-text">$<%= parseFloat(product.price).toFixed(2) %></p>
            <button class="btn btn-outline-dark buy-now-btn" data-product-id="<%= product.product_id %>">
                Inquire
            </button>

          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>

<!-- Modal container -->
 <!-- Inquiry Modal -->
<div class="modal fade" id="productModal" tabindex="-1" aria-labelledby="productModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header bg-dark text-white">
        <h5 class="modal-title" id="productModalLabel">Product Inquiry</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-md-6">
            <img id="modalImage" src="" class="img-fluid" alt="Product Image">
          </div>
          <div class="col-md-6">
            <h5 id="modalName"></h5>
            <p id="modalPrice" class="fw-bold text-danger"></p>
            <form id="inquiryForm">
              <div class="mb-2">
                <input type="email" class="form-control" id="customerEmail" placeholder="Your Email" required>
              </div>
              <div class="mb-2">
                <textarea class="form-control" id="message" rows="3" placeholder="Your Message..." required></textarea>
              </div>
              <input type="hidden" id="productNameHidden">
              <button type="submit" class="btn btn-dark">Send Inquiry</button>
              <div id="inquirySuccess" class="text-success mt-2 d-none">Inquiry sent!</div>
              <div id="inquiryError" class="text-danger mt-2 d-none">Something went wrong. Try again.</div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="./js/customer.js"></script>
<%- include('partials/footer') %>

