<%- include('partials/header') %>

<div class="container mt-4">
  <h2 class="text-center mb-4">All Products</h2>

  <!-- Search and filter -->
  <div class="row mb-3">
    <div class="col-md-6">
      <input type="text" class="form-control" id="searchInput" placeholder="Search products...">
    </div>
    <div class="col-md-6 text-end">
      <select id="filterSelect" class="form-select w-auto d-inline">
        <option value="">All Categories</option>
        <option value="Body Spray">Body Spray</option>
        <option value="Cologne">Cologne</option>
      </select>
    </div>
  </div>

  <!-- Product grid -->
  <div class="row g-4" id="productGrid">
    <% products.forEach(product => { %>
      <div class="col-sm-6 col-md-4 col-lg-3 product-card" data-name="<%= product.product_name.toLowerCase() %>">
        <div class="card h-100 shadow-sm">
          <img src="/images/<%= product.image_name %>" class="card-img-top" alt="<%= product.product_name %>">
          <div class="card-body text-center">
            <h6 class="card-title"><%= product.product_name %></h6>
            <p class="card-text">$<%= parseFloat(product.price).toFixed(2) %></p>
            <button class="btn btn-outline-dark btn-sm buy-now-btn" data-product-id="<%= product.product_id %>">Buy Now</button>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>

<!-- Modal container -->
<div id="modalContainer"></div>

<%- include('partials/footer') %>
