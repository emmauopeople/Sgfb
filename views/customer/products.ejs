<%- include('partials/header') %>

<div class="container my-4">
  <h2 class="text-center mb-3">All Products</h2>

  <!-- Search & Filter -->
  <div class="row g-2 mb-3">
    <div class="col-12 col-sm-7">
      <input type="text" class="form-control" id="searchInput" placeholder="Search products...">
    </div>
    <div class="col-6 col-sm-3">
      <select id="filterSelect" class="form-select">
        <option value="">All Categories</option>
        <option value="Body Spray">Body Spray</option>
        <option value="Cologne">Cologne</option>
      </select>
    </div>
    <div class="col-6 col-sm-2">
      <button id="clearFilters" class="btn btn-outline-secondary w-100">Clear</button>
    </div>
  </div>

  <!-- Product Grid -->
  <div class="row row-cols-2 row-cols-sm-3 row-cols-md-4 row-cols-lg-5 g-3">
    <% products.forEach(product => { %>
      <div class="col product-card" data-name="<%= product.product_name.toLowerCase() %>" data-category="<%= product.category || '' %>">
        <div class="card h-100">
          <img src="/images/<%= product.image_name %>" class="card-img-top square-img" alt="<%= product.product_name %>">
          <div class="card-body p-2 d-flex flex-column">
            <div class="small fw-semibold text-clamp-2"><%= product.product_name %></div>
            <div class="text-muted small">$<%= parseFloat(product.price).toFixed(2) %></div>
            <button class="btn btn-outline-dark btn-sm mt-auto w-100 buy-now-btn" data-product-id="<%= product.product_id %>">Inquire</button>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>

<!-- Inquiry Modal -->
<div class="modal fade" id="productModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-fullscreen-sm-down">
    <div class="modal-content">
      <div class="modal-header bg-dark text-white">
        <h5 class="modal-title">Product Inquiry</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="row g-3">
          <div class="col-12 col-sm-6">
            <img id="modalImage" class="img-fluid rounded" alt="Product Image">
          </div>
          <div class="col-12 col-sm-6">
            <h5 id="modalName" class="mb-1"></h5>
            <p id="modalPrice" class="fw-bold text-danger mb-2"></p>
            <form id="inquiryForm" class="row g-2">
              <div class="col-12">
                <input type="email" class="form-control" id="customerEmail" placeholder="Your Email" required>
              </div>
              <div class="col-12">
                <textarea class="form-control" id="message" rows="3" placeholder="Your Message..." required></textarea>
              </div>
              <input type="hidden" id="productNameHidden">
              <div class="col-12">
                <button type="submit" class="btn btn-dark w-100">Send Inquiry</button>
              </div>
              <div class="col-12">
                <div id="inquirySuccess" class="text-success mt-2 d-none">Inquiry sent!</div>
                <div id="inquiryError" class="text-danger mt-2 d-none">Something went wrong. Try again.</div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Page-specific scripts go BEFORE footer include -->
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script src="/js/customer_products.js"></script>

<%- include('partials/footer') %>
